{
    "manifest_version": 3,
    "name": "ScrollRot",
    "version": "1.0.0",
    "description": "Worsen the infinite scrolling experience",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "index.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://www.youtube.com/shorts/*"
            ],
            "js": [
                "shortsContent.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://www.instagram.com/reel/*",
                "https://www.instagram.com/*/reels/*",
                "https://www.instagram.com/reels/*"
            ],
            "js": [
                "reelsContent.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://www.tiktok.com/*"
            ],
            "js": [
                "tiktokContent.js"
            ],
            "run_at": "document_start"
        }
    ]
}